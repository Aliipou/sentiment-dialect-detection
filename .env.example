# Environment Configuration Template
# Copy this to .env and adjust values as needed

# Model Paths
SENTIMENT_MODEL_PATH=models/sentiment_model
DIALECT_MODEL_PATH=models/dialect_model.joblib
MULTILINGUAL_MODEL_PATH=models/multilingual_model

# Model Names
PERSIAN_MODEL_NAME=HooshvareLab/bert-fa-base-uncased
MULTILINGUAL_MODEL_NAME=xlm-roberta-base

# Training Configuration
BATCH_SIZE=16
LEARNING_RATE=2e-5
NUM_EPOCHS=3
TEST_SIZE=0.2
RANDOM_STATE=42

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance
USE_GPU=true
MAX_BATCH_SIZE=100
